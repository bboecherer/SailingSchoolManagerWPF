<UserControl x:Class="SealingSchoolWPF.Pages.InstructorListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:resx="clr-namespace:SealingSchoolWPF.Resources.Language"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <DataGrid ItemsSource="{Binding Instructors}" SelectionMode="Single" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="{x:Static resx:Resource.Label}" 
                            Binding="{Binding Label }"/>
                <DataGridTextColumn Header="{x:Static resx:Resource.Adress}" 
                            Binding="{Binding AddressLine1}"/>
                <DataGridTextColumn Header="{x:Static resx:Resource.PostalShort}" 
                            Binding="{Binding ZipCode}"/>
                <DataGridTextColumn Header="{x:Static resx:Resource.City}" 
                            Binding="{Binding City}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
<UserControl xmlns:BusinessUnit="clr-namespace:SailingSchoolWPF.Pages.Controls"  x:Class="SailingSchoolWPF.Content.BusinessUnitSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:resx="clr-namespace:SailingSchoolWPF.Resources.Language"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="630">
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Text="{x:Static resx:Resource.Mandant}" Style="{StaticResource Heading2}" Grid.Row="0"/>
            <BusinessUnit:BuGeneralControl Grid.Row="1"/>
            <BusinessUnit:BuAdressControl Grid.Row="2"/>
            <BusinessUnit:BuBankControl Grid.Row="3"/>
        </Grid>
    </ScrollViewer>
</UserControl>

<UserControl xmlns:Controls="clr-namespace:SailingSchoolWPF.Pages.Controls"  
             x:Class="SailingSchoolWPF.Pages.Invoicing.Update.Base"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:Button="clr-namespace:SailingSchoolWPF.Pages.Invoicing.Controls"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:resx="clr-namespace:SailingSchoolWPF.Resources.Language"
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="360" d:DesignWidth="400">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <Controls:InvoiceBaseControl />
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="230" />
                    </Grid.ColumnDefinitions>
                </Grid>
                <Button:UpdateButtons HorizontalAlignment="Right" Margin="15"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

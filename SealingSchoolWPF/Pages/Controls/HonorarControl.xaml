<UserControl x:Class="SealingSchoolWPF.Pages.Controls.HonorarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:resx="clr-namespace:SealingSchoolWPF.Resources.Language"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="210" d:DesignWidth="310">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Content="Stundensatz"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Tagessatz"/>
        <xctk:DecimalUpDown Grid.Column="1" Grid.Row="0" Margin="3" FormatString="C2" Minimum="0.00" 
                                        Value="{Binding Path=HonorarValueStd}" Increment=".5" />
        <xctk:DecimalUpDown Grid.Column="1" Grid.Row="1" Margin="3" FormatString="C2" Minimum="0.00" 
                                        Value="{Binding Path=HonorarValueDay}" Increment=".5" />
    </Grid>
</UserControl>

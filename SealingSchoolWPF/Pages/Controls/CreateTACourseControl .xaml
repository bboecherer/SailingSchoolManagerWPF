<UserControl x:Class="SealingSchoolWPF.Pages.Controls.CreateTACourseControl "
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:resx="clr-namespace:SealingSchoolWPF.Resources.Language"
                       xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="330">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="200" />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Content="Bitte wählen Sie Start- und Enddatum aus."
               FontWeight="Bold" FontSize="14"/>
        <Label Grid.Row="1" Grid.Column="0" Content="Kursstart"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Kursende"/>
        <Label Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Content="Bitte wählen Sie den Kurs aus."
               FontWeight="Bold" FontSize="14"/>
        <Label Grid.Row="4" Grid.Column="0" Content="Kurs"/>
        <!--
        <xctk:DateTimePicker Grid.Column="1" Grid.Row="1" Margin="3" 
                                         Format="ShortDate"/>
        <xctk:DateTimePicker Grid.Column="1" Grid.Row="2" Margin="3" Height="20" VerticalAlignment="Top"
                                         Format="ShortDate" />
        -->
        <ComboBox Grid.Column="1" Grid.Row="4" Margin="3" ScrollViewer.VerticalScrollBarVisibility="Visible"
                  MaxDropDownHeight="100" 
                  SelectedValue="{Binding CourseTyp}" ItemsSource="{Binding CourseValues}" 
                  IsEnabled="True" IsReadOnly="False"
                  />
    </Grid>
</UserControl>

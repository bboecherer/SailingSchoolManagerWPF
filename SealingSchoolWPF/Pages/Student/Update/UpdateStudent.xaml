<mui:ModernWindow x:Class="SailingSchoolWPF.Pages.Student.Update.UpdateStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mui="http://firstfloorsoftware.com/ModernUI"
        xmlns:resx="clr-namespace:SailingSchoolWPF.Resources.Language"
        Title="{x:Static resx:Resource.Students}" IsTitleVisible="True"
        xmlns:Button="clr-namespace:SailingSchoolWPF.Pages.Controls"
       ContentSource="/Pages/Student/Update/Base.xaml"
       Height="450" Width="500" Closing="ModernWindow_Closing"
      >
    <mui:ModernWindow.MenuLinkGroups >
        <mui:LinkGroup DisplayName="{x:Static resx:Resource.Update_ToolTip_Desc}">
            <mui:LinkGroup.Links>
                <mui:Link DisplayName="{x:Static resx:Resource.Base}" Source="/Pages/Student/Update/Base.xaml" />
                <mui:Link DisplayName="{x:Static resx:Resource.Bankdata}" Source="/Pages/Student/Update/Bankdata.xaml" />
                <mui:Link DisplayName="{x:Static resx:Resource.Qualification}" Source="/Pages/Student/Update/Qualification.xaml" />
                <mui:Link DisplayName="{x:Static resx:Resource.Notes}" Source="/Pages/Student/Update/Notes.xaml" />
            </mui:LinkGroup.Links>
        </mui:LinkGroup>
    </mui:ModernWindow.MenuLinkGroups>
</mui:ModernWindow>

<UserControl x:Class="SealingSchoolWPF.General.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:resx="clr-namespace:SealingSchoolWPF.Resources.Language"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="{x:Static resx:Resource.About}" Style="{StaticResource Heading2}" Margin="0,0,0,8" />
                <TextBlock Text="Sailing School Manager" Margin="0,0,0,8" TextWrapping="Wrap" />
                <TextBlock Text="Version: 1.0.1" Margin="0,0,0,8" TextWrapping="Wrap" />
                <TextBlock Text="Copyright Studs@Work AG" Margin="0,0,0,8" TextWrapping="Wrap" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

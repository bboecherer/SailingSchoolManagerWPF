<UserControl xmlns:General="clr-namespace:SailingSchoolWPF.Pages.General"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:Controls="clr-namespace:SailingSchoolWPF.Pages.Controls"  x:Class="SailingSchoolWPF.Pages.Home" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="750">
    <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
        <Grid Style="{StaticResource ContentRoot}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="450" />
                    <ColumnDefinition Width="25" />
                    <ColumnDefinition Width="250" />
                </Grid.ColumnDefinitions>
                <Controls:Tiles Grid.Column="0"/>
                <General:InfoBox Grid.Column="2" />
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
